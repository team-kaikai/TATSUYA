<div class = "order-new-wrapper">
	<%= form_for @order_append, url:order_append_path do |f|%>
	<div class ="container">
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<h3 style="border-bottom:1.0px solid black; margin-top: 30px;">送付先選択</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<table class="table table-hover" style="table-layout:fixed;">
					<tbody>
						<tr>
							<td class="col-xs-1"><%= radio_button_tag :address, 0 , :checked %></td>
							<td style="width: 100px;"><%= current_end_user.first_name %><%= current_end_user.last_name %></td>
							<td style="width: 100px;"></td>
							<td style="width: 100px;"><%= current_end_user.postal_code %></td>
							<td style="width: 100px;"><%= current_end_user.address %></td>
						</tr>
					<% @address_nemus.each do |address_menu| %>
						<tr>
							<td class="col-xs-1"><%= radio_button_tag :address, address_menu.id %></td>
							<td style="width: 100px;"><%= address_menu.name %></td>
							<td style="width: 100px;"></td>
							<td style="width: 100px;"><%= address_menu.postal_code %></td>
							<td style="width: 100px;"><%= address_menu.address %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col" style="margin: 50px 0; text-align: center">
			  	<button>
					<%= link_to "住所情報を新規追加する",new_end_user_address_menus_path(current_end_user)  %>
				</button>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<h3 style="border-bottom:1.0px solid black;">支払い方法選択</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-4 col-xs-offset-2">

				<label>
					<h4><%= f.radio_button :pay, 0, {:checked => true} %>代引き</h4>
				</label>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-4 col-xs-offset-2">
				<label>
					<h4><%= f.radio_button :pay, 1 %>クレジット</h4>
				</label>
			</div>

		</div>
		<div class="row">
			<div class="col-xs-4 col-xs-offset-2">
				<label>
					<h4><%= f.radio_button :pay, 2 %>銀行振込</h4>
				</label>
			</div>
		</div>
		<div class="row">
			<div class="col" style="margin: 50px 0; text-align: center">
					<%= f.submit "購入", :class=>"purchase_btn"%>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>
