	  		<p style="font-size: 16px;">価格</p>
	  	</div>
	  	<div class="col-xs-8" style="padding-left: 10%;">
	  		<table class="product-main" style="font-size: 16px;">
	  		  <thead>
	  			<tr>
	  				<th></th>
	  				<th>曲名</th>
	  				<th>アーティスト</th>
	  			</tr>
	  		  </thead>
	  			<tr>
	  				<td width="15%">1</td>
	  				<td width="50%">曲名1</td>
	  				<td width="25%">アーティスト名1</td>
	  			</tr>
	  			<tr>
	  				<td width="15%">2</td>
	  				<td width="50%">曲名2</td>
	  				<td width="25%">アーティスト名2</td>
	  			</tr>
	  		</table>
	  	</div>
		  	<div class="text-center" style="padding-right: 20%; padding-top: 10%;">
	       		<%= link_to "編集",edit_admins_product, class: "btn btn-info" %>
	   	   </div>
	 </div>
  </div>
</div>

<div class="review-wrapper">
  <div class="container">
  	<h2>レビュー一覧</h2>
  	   <div class="row">
  		  <ol class="review-list" style="border: 2px solid #999;">
	          <li class="comment">
	            <div class="comment-body bb">
	                <div class="comment-text">
	                    <div class="comment-author clearfix">
	                        <span class="comment-meta">
	                          <span class="comment-date">2019/6/11</span>
	                        </span>
	                    </div>
	                    <div class="comment-entry">コメント内容</div>
	                     <div class="text-right">
       						<button type="button" class="btn btn-danger" style="font-size: 10px;">削除</button>
   	   					</div>
	                </div>
	            </div>
	          </li>
         </ol>
  	  </div>
  </div>
</div>