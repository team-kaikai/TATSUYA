<div class="order-status-wrapper">
	<div class="container">
		<div class="order-status-title">
			<div class="row">
				<h1>注文内容詳細・・・</h1>
				<p style="font-size: 20px;">配送状況<span style="padding-left: 2%;"><%= @order_append.status %></span></p>
				<P style="font-size: 20px;">送付先住所<span style="padding-left: 2%;"><%= @order_append.address %></span></P>
				<p style="font-size: 20px;">送付先指名<span style="padding-left: 2%;"><%= @order_append.name %></span></p>
			</div>
		</div>
		<div class="row">
			<% @order_details.each do |details| %>
				<% if @order_append.id == details.order_append_id %>
					<div class="status-box col-xs-8 col-xs-offset-2">
						<div class="row">
							<%= attachment_image_tag details.product, :profile_image, :fill, 150, 150,format:"jpeg",fallback: "no_image.jpg",size:'150x150'  %>
							<div class="col-xs-7 col-xs-offset-1" style="padding-top: 15px">
								<p>アルバム名<%= details.product.album_name %></p>
								<p>枚数<%= details.quantity %>枚</p>
								<p>購入日<%= details.created_at.strftime('%Y/%m/%d') %></p>
								<p>価格<%= details.price %>円</p>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
		<div class="row text-right" style="padding-bottom: 2%;">
			<p style="font-size: 32px;">購入金額<span style="padding-right: 1%;"></span><%= @order_append.subtotal %>円</p>
		</div>
	</div>
</div>


