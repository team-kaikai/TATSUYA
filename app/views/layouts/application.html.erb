<!DOCTYPE html>
<html>
  <head>
    <title>TATSUYA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <% if end_user_signed_in? %>
        <%= current_end_user.first_name %>がLogin中
      <% end %>
      <nav>
        <ul class="nav-list">
          <% if end_user_signed_in? %>
            <li class="nav-list-item"><%= link_to 'Home',  products_path , class: "header-title" %></li>
            <li class="nav-list-item"><%= link_to 'Mypage', enduser_show_path(current_end_user) , class: "header-title" %></li>
            <li class="nav-list-item"><%= link_to 'Logout', destroy_end_user_session_path, method: :delete, class: "header-title" %></li>
            <li class="nav-list-item"><%#= link_to cart_path(@end_user) do %>
            <i class="fas fa-shopping-cart"></i></li>
          <% else %>
            <li class="nav-list-item"><%= link_to 'Home', products_path , class: "header-title" %></li>
            <li class="nav-list-item"><%= link_to 'Signup',new_end_user_registration_path , class: "header-title"%></li>
            <li class="nav-list-item"><%= link_to 'Login', new_end_user_session_path, class: "header-title" %></li>
          <% end %>
        </ul>
      </nav>
    </header>


    <%= yield %>

    <footer style="border: 3px solid #aaaadd">
      <div class="container">
        <h3 class="text-left">TATSUYA<span style="padding-left: 50px;">長野県長野市長野原1-12-1</span>
        </h3>
        <%= link_to destroy_end_user_session_path,method: :delete do %>
          <h3 style="color: white">ログアウト</h3>
        <% end %>
      </div>
    </footer>

  </body>
</html>
