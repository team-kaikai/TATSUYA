<div class="productshow-wrapper">
  <div class="container">
  	<div class="row" style="padding-top: 10%;">
	  	<div class="col-xs-4">
	  		<p style="border-bottom:3px solid #999;"><%= @product.album_name %></p>
	  		<img src="#" width="300" height="300" />
	  		<p style="font-size: 16px; padding-top: 10px;"><%= @label.name %></p>
	  		<p style="font-size: 16px;"><%= @product.price %></p>
	  		<div class="main-button-delete show-border-font">
	           <a href="#" style="font-size: 20px;"><%= @product.status %></a>
	        </div>
	        <span>在庫数</span><span style="font-size: 20px; width: 100%;"><%= @product.stock %></span><br>
	        <!-- ここを後日指定 -->
	        <%= form_for @cart, url: end_user_carts_path(current_end_user.id) do |f| %>
	       		<span>個数</span><%= f.number_field :quantity %><br>
	       		<%= f.hidden_field :product_id, value: @product.id %>
	      		<div class="row">


	      	<% if @product.favorited_by?(current_end_user) %>
  				<li>
    				<%= link_to product_favorites_path(@product), method: :delete do %>
      					<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      				<%= @product.favorites.count %> いいね
    				<% end %>
  				</li>
			<% else %>
  				<li>
    				<%= link_to product_favorites_path(@product), method: :post do %>
      					<i class="fa fa-heart-o" aria-hidden="true"></i>
      				<%= @product.favorites.count %> いいね
    				<% end %>
  				</li>
			<% end %>


	      			<%= f.submit "カートに追加する" %>
	       			<!-- <a href="https://local-clips.com/" class="btn" style="width: 400px;">カートに追加</a> -->
	    		</div>
	    	<% end %>

	  	</div>
	  	<div class="col-xs-8" style="padding-left: 10%;">
	  		<table class="product-main" style="font-size: 16px;">
	  		  <thead>
	  			<tr>
	  				<th></th>
	  				<th>曲名</th>
	  				<th>アーティスト</th>
	  			</tr>
	  		  </thead>
	  		  <% @product.discs.each do |disc| %>
		  		   <% disc.songs.each do |song| %>
			  		  <tbody>
			  			<tr>
			  				<td width="15%"><%= song.track %></td>
			  				<td width="50%"><%= song.name %></td>
			  				<td width="25%"><%= @product.artist.name %></td>
			  			</tr>
			  		  </tbody>
	  		      <% end%>
	  		  <% end %>
	  		</table>
	  		<div class="product-comment" style="padding-top: 350px;">
	  		  <textarea style="width: 100%; height: 150px;"></textarea>
	  		</div>
	  	</div>
	 </div>
  </div>
</div>
<div class="add-review-wrapper" style="padding-top: 20px;">
	<div class="container" style="border: 3px solid #dddddd; border-radius: 10px; height: auto;">
		<h2>レビュー追加</h2>
		<%= form_for [@product, @comment] do |f| %>
			<div class="add-review" style="padding: 10px;">
				<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			</div>
		<div class="row">
				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
		</div>
		<% end %>
	</div>
</div> 
<div class="review-wrapper">
  <div class="container">
  	<h2>レビュー一覧</h2>
  	<% @product.comments.each do |comment| %>
  	   <div class="row">
  		  <ol class="review-list" style="border: 2px solid #999;">
	          <li class="comment">
	            <div class="comment-body bb">
	                <div class="comment-text">
	                    <div class="comment-author clearfix">
	                        <span class="comment-meta">
	                          <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
	                          <span class="comment-date"><%= comment.end_user.first_name %>さんのレビュー</span>
	                        </span>
	                    </div>
	                    <div class="comment-entry"><%= comment.comment %></div>
	                </div>
	            </div>
	          </li>
			<% if current_end_user %>
	        	<button style="width: 30%; float: right;">
							<p><%= link_to "削除", product_comment_path(@product,comment), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
				</button>
			<% end %>
         </ol>
  	  </div>
  	 <% end %>
  </div>
</div>