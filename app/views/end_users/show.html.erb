<div class="mypage-wrapper">
	<div class="continer">
		<div class="row">

			<div class="col-xs-2" style="margin-right:20px;">
				<div class="favarites-box" style="border-right: 3px solid #dddddd">
					<h3>いいね一覧</h3>
					<div class="mypage-good-box1">
						<%= attachment_image_tag @product, :profile_image, format: 'jepg', fallback: "sample_image.jpg", size: "150x150" %>
						<div class="mypage-album-box" style="text-align: center">
						  <p><%= @product.artist.name %></p>
						  <p><%= @product.album_name %></p>
						</div>
					</div>

					<div class="mypage-good-box2">
						<img src="/no_image.jpg" height="150px">
						<div class="mypage-album-box">
						  <p>アーティスト名</p>
						  <p>シングル・アルバム名</p>
						</div>
					</div>

					<div class="mypage-good-box3">
						<img src="/no_image.jpg" height="150px">
						<div class="mypage-album-box">
						  <p>アーティスト名</p>
						  <p>シングル・アルバム名</p>
						</div>
					</div>

					<div class="mypage-good-box4">
						<img src="/no_image.jpg" height="150px">
						<div class="mypage-album-box">
						  <p>アーティスト名</p>
						  <p>シングル・アルバム名</p>
						</div>
					</div>
				</div>
			</div>

			<div class="col-xs-9">
				<div class="row">

					<h1 class="col-xs-7">俺のページ</h1>
					<div class="main-button col-xs-2 col-xs-offset-2">
						<div class="main-button-delete mypage-border-font">
	                 		 <%= link_to "退会" , destroy_end_user_session_path, class: "btn btn-default pull-right" %>
	                 	</div>
	                </div>
       		    </div>
	                <div class="row"style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">名前</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.first_name %><%= @enduser.last_name %>
	                	</div>
	                </div>
	                <div class="row" style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">フリガナ</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.details_first_name %><%= @enduser.details_first_name %>
	                	</div>
	                </div>
	                <div class="row" style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">郵便番号</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.first_postal_code %>-<%= @enduser.last_postal_code %>
	                	</div>
	                </div>
	                <div class="row" style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">住所</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.address %>
	                	</div>
	                	<%= link_to "住所登録" ,new_end_user_address_menus_path(@enduser.id), class: "btn btn-default pull-right" %>
	                </div>
	                <div class="row" style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">電話番号</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.tel %>
	                	</div>
	                </div>
	                <div class="row" style="border-bottom: 3px solid #dddddd">
	                	<h4 class="col-xs-4">Email</h4>
	                	<div class="col-xs-4 col-xs-offset-2">
	                		<%= @enduser.email %>
	                	</div>
	                </div>
	                <div class="row">
	                	<%= link_to "編集" , edit_end_user_path, class: "btn btn-default pull-right" %>
	                </div>
	                <div class="row">
	                	<div class="col-xs-12" style="border-bottom: 3px solid #dddddd">
	                		<h1>購入履歴</h1>
	                		<table class="order-histroy-table">
	                			<thead>
	                				<tr class="order-histroy-box">
	                					<th width="50%">購入日</th>
	                					<th width="50%">発送状況</th>
	                					<th colspan="1" width="20%"></th>
	                				</tr>
	                				<tr height="20px"></tr>
	                			</thead>
	                			<tbody>
	                				<tr style="border-bottom: 3px solid #dddddd">
	                					<td>6月12日</td>
	                					<td>配送中</td>
	                					<td><%= link_to "詳細" ,  order_detail_path(@enduser.id), class: "btn btn-default pull-right" %></td>
	                				</tr>
	                				<tr height="20px"></tr>
	                			</tbody>
	                			<tbody>
	                				<tr>
	                					<td>6月10日</td>
	                					<td>配送完了</td>
	                					<td><%= link_to "詳細" , order_detail_path(@enduser.id), class: "btn btn-default pull-right" %></td>
	                				</tr>
	                			</tbody>
	                		</table>
	                	</div>
	                </div>
			</div>
		</div>
	</div>
</div>
