<div class="useredit-wrapper" style="padding-bottom: 20px;">
  <div class="container">
  	<form class="form-horizontal  center-block" style="padding-left: 15%;">

      <h1 style="padding-bottom: 20px;">ユーザー情報編集</h1>
       <div class="form-group">
       	 <%= form_for(@enduser) do |f| %>
	       	 <label class="controll-label col-xs-2" style="font-size: 20px;">名前(姓)</label>
	         	<div class="col-xs-3">
	       		 	<%= f.text_field :first_name %>
	       	 	</div>

	       	 <label class="controll-label col-xs-2" style="font-size: 20px;">名前(名)</label>
	        	<div class="col-xs-3">
	       		 	<%= f.text_field :last_name %>
	       	 	</div>
	       </div>

	       <div class="form-group">
	       	 <label class="controll-label col-xs-2" style="font-size: 20px;">名前(カナ姓)</label>
	      	    <div class="col-xs-3">
	       		  	<%= f.text_field :details_first_name %>
	       		</div>

	       	  <label class="controll-label col-xs-2" style="padding-right:0; font-size: 20px;">名前(カナ名)</label>
	       		 <div class="col-xs-3">
	       		 	<%= f.text_field :details_last_name %>
	       		 </div>
	       	</div>

	        <div class="form-group">
	       　 <label class="controll-label col-xs-2" style="font-size: 20px;">パスワード</label>
	       	    <div class="col-xs-3">
	       	   		<%= f.password_field :password %>
	       	    </div>
	        </div>

	       <div class="form-group">
	         <label class="controll-label col-xs-2" style="font-size: 20px;">パスワード<br>(確認用)</label>
	        	<div class="col-xs-3">
	       			<%= f.password_field :password_confirmation %>
	   			</div>
	   		</div>

	   	   <div class="form-group">
	         <label class="controll-label col-xs-2"style="font-size: 20px;">メールアドレス</label>
	       		<div class="col-xs-3">
	       			<%= f.email_field :email %>
	   			</div>
	     	</div>

	   		<div class="form-group">
	       	  <label class="controll-label col-xs-2" style= "font-size: 20px;">郵便番号</label>
	         	 <div class="col-xs-2" style="padding-right:0;">
	       		 	<%= f.text_field :first_postal_code %>
	       	 	 </div>

	       	  <label class="controll-label col-xs-1 text-center" style= "font-size: 20px;">-</label>
	        	 <div class="col-xs-2" style="padding-left:0;">
	       		 	<%= f.text_field :last_postal_code %>
	       	 	 </div>
	       </div>

			<div class="form-group">
	       		<label class="controll-label col-xs-2" style="font-size: 20px;">住所</label>
	       		   <div class="col-xs-3">
	       			  <%= f.text_field :address %>
	   			   </div>
	   	    </div>


		   <div class="form-group">
	       		<label class="controll-label col-xs-2" style="font-size: 20px;">電話番号</label>
	       		   <div class="col-xs-3">
	       			 <%= f.text_field :tel %>
				   </div>
		   </div>

		   <div class="text-center" style="padding-right: 20%;">
	       		<button type="button" class="btn btn-info" style="font-size: 20px;">編集</button>
	   	   </div>
   	   <% end %>
    </form>
  </div>
</div>