<div class="useredit-wrapper" style="padding-bottom: 20px;">
  <div class="container">
  	<div class="row" align="center">
  		<h1 style="padding-bottom: 20px;">ユーザー情報編集</h1>
  		<% if flash[:edit] %>
  			<p style="color:red;"><%= flash[:edit] %></p>
		<% end %>
  		<%= form_for(@enduser) do |f| %>
	  		<table  align="center">
		  		<tr>
		  			<td width="150" height="50"><label>名前(姓)</label></td>
		  			<td width="200"><%= f.text_field :first_name %></td>
		  			<td width="120"><label>名前(名)</label></td>
		  			<td><%= f.text_field :last_name %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>名前(カナ姓)</label></td>
		  			<td><%= f.text_field :details_first_name %></td>
		  			<td><label>名前(カナ名)</label></td>
		  			<td><%= f.text_field :details_last_name %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>パスワード</label></td>
		  			<td><%= f.password_field :password %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>パスワード(確認用)</label></td>
		  			<td><%= f.password_field :password_confirmation %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>メールアドレス</label></td>
		  			<td><%= f.email_field :email %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>郵便番号</label></td>
		  			<td><%= f.text_field :postal_code %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>住所</label></td>
		  			<td><%= f.text_field :address %></td>
		  		</tr>
		  		<tr>
		  			<td height="50"><label>電話番号</label></td>
		  			<td><%= f.text_field :tel %></td>
		  		</tr>
	  		</table>
  			<div class="text-center">
	       		<%= f.submit "編集",class: "btn btn-default" %>
	   	   	</div>
	   	<% end %>
   	</div>
  </div>
</div>