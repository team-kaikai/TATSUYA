<div class="session-wrapper">
  <div class="container">
    <h2 class="session-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,class: "session-font"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "session-box" %>
      </div>

      <div class="field">
        <%= f.label :password,class: "session-font" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class: "session-box" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class: "action-btn" %>
      </div>
    <% end %>

    <%= render "end_users/shared/links" %>
  </div>
</div>